preview-main
    .mdl-grid
        div(class=`{ col4 }`)
            label.mdl-switch.mdl-js-switch.mdl-js-ripple-effect
                input.mdl-switch__input(name='solidmode', type='checkbox', checked=`{ opts.preview.solid }`, onchange=`{ mode }`)
                span.mdl-switch__label 立体視
    .mdl-grid
        div(class=`{ col3 }`)
        div(class=`{ col1 }`)
            a.mdl-button.mdl-js-button.mdl-button--icon.mdl-button--colored(href='#madori')
                i.material-icons keyboard_return

    script.
        this.on('mount', () => {
            componentHandler.upgradeDom();
        });
        this.mixin('grid');

        this.mode   = () => {
            opts.preview.solid  = this.solidmode.checked;
            opts.preview.setSolidMode(this.solidmode.checked);
        };
